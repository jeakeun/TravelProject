<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.hi.travel_community.dao.MemberDAO">

    <!-- 회원가입 시 아이디와 이메일로 중복 확인 -->
    <select id="selectMember" resultType="kr.hi.travel_community.model.vo.MemberVO">
        SELECT * FROM member 
        WHERE mb_Uid = #{id} 
        AND mb_email = #{email}
    </select>

    <!-- 로그인 시 아이디로 조회 -->
    <select id="selectMemberById" resultType="kr.hi.travel_community.model.vo.MemberVO">
        SELECT * FROM member 
        WHERE mb_Uid = #{id}
    </select>

    <!-- 새로운 회원정보 저장 -->
    <insert id="insertMember">
        INSERT INTO member (mb_Uid, mb_pw, mb_email, mb_agree)
        VALUES (#{id}, #{pw}, #{email}, #{agree})
    </insert>

</mapper>